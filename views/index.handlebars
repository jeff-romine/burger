<h1>Burgers!</h1>

<h2>Burgers!</h2>

<ul>
  {{#each burgers}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="sleepy" value="true">
          <button type="submit">Devour!</button>
        </form>

        {{> burgers/delete-burger}}
      </li>
  {{/each}}
</ul>

{{! <h2>Add a Burger</h2> }}
{{! <form class="create-update-form" action="/" method="POST"> }}

{{!   <div class="form-group"> }}
{{!     <label for="ca">Burger Name:</label> }}
{{!     <input type="text" id="ca" name="name"> }}
{{!   </div> }}

{{!   <div class="form-group"> }}
{{!     <label for="sleepy">Sleepy?</label><br> }}
{{!     <input type="radio" name="sleepy" value="1" checked> Sleepy!<br> }}
{{!     <input type="radio" name="sleepy" value="0"> Awake }}
{{!   </div> }}

{{!   <button type="submit">Add Burger</button> }}
{{! </form> }}
