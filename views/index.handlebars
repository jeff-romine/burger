<h1>Burgers!</h1>

<div class="jumbotron">
    <div class="container">
        <h1>Hello, world!</h1>
        <p>Contents...</p>
        <p>
            <a class="btn btn-primary btn-lg">Learn more</a>
        </p>
    </div>
</div>

<div class="container">
    <div class="row panel panel-default">
        <div id="undevoured" class="col-lg-6 col-md-6 col-sm-6" style="background-color:yellow">
            {{#each burgers}}
                {{#unless this.devoured}}
                    <div class="col-lg-8 col-md-8 col-sm-8">
                        <h2>{{this.index}}. {{this.burger_name}}</h2>
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        <button class="btn-lg" id="devour-{{this.id}}">Devour It!</button>
                    </div>

                {{/unless}}
            {{/each}}
        </div>
        <div id="devoured" class="col-lg-6 col-md-6 col-sm-6" style="background-color:pink">
            {{#each burgers}}
                {{#if this.devoured}}
                    <div>
                        <h2>{{this.index}}. {{this.burger_name}}</h2>
                    </div>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<ul>
    {{#each burgers}}
        <li>
            {{this.burger_name}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devour" value="true">
                <button type="submit">Devour!</button>
            </form>
            {{> burgers/delete-burger}}
        </li>
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

    <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="burger_name">
    </div>
    <button type="submit">Add Burger</button>
</form>
