<h1>Burgers!</h1>
<ul>
    {{#each burgers}}
        <li>
            {{this.burger_name}}

            <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devour" value="true">
                <button type="submit">Devour!</button>
            </form>
            {{> burgers/delete-burger}}
        </li>
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

    <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="burger_name">
    </div>
    <button type="submit">Add Burger</button>
</form>
